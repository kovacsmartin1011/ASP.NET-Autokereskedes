<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Autokereskedes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Autokereskedes.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-blue">
            <img src="https://images.vexels.com/content/154251/preview/bmw-car-front-view-silhouette-dc57c3.png" style="width:50px;height:50px;margin-left:10px;" />
            <div class="container-fluid">
                <a class="navbar-brand lead" style="font-weight:bold;margin-left:0px;color:black;" asp-controller="Home" asp-action="Index">Premium-Salon</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item mr">           
                            <a class="nav-link text-dark" asp-controller="Auto" asp-action="Index"><i class="fa-solid fa-car mr"></i>Autók Listázása</a>
                       </li>
                        <li class="nav-item mr">
                            <a class="nav-link text-warning" asp-controller="Favourite" asp-action="Index"><i class="fa fa-star mr"></i>Kedvencek</a>
                        </li>
                        <li class="nav-item mr">
                            <a class="nav-link text-danger" asp-controller="Auto" asp-action="MyAds"><i class="fa-solid fa-hand-holding-dollar mr"></i>Saját hirdetések</a>
                        </li>
                        <li class="nav-item mr">
                            <a class="btn btn-success text-light" asp-controller="Auto" asp-action="Create"><i class="fa-solid fa-plus mr"></i>Új Autó Hirdetés</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark" asp-area="Identity" asp-page="/Account/Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bigbottommargin">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container mt-0 mb-0">
            &copy; 2024 - Autokereskedes - <a asp-area="" asp-controller="Home" asp-action="Privacy">Adatvédelmi nyilatkozat</a>
        </div> 
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
