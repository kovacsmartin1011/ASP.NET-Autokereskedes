@model Autokereskedes.Models.Profile
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Profil Szerkesztése";
}

<h1 class="mt-4">Profil Szerkesztése</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Név</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefonszám</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Cím</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Születési dátum</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePictureUrl">Profilkép Url</label>
        <input asp-for="ProfilePictureUrl" class="form-control" />
        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Mentés</button>
    <a asp-action="Index" class="btn btn-secondary">Mégse</a>
</form>
