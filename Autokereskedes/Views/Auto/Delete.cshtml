@model Autokereskedes.Models.Auto
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Autó törlése";
}

<h1>@ViewData["Title"]</h1>

<p>Biztosan törölni szeretnéd az alábbi autót?</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Név</th>
            <th>Marka</th>
            <th>Leírás</th>
            <th>Kép</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Brand</td>
            <td>@Model.Description</td>
            <td><img src="@Model.ImgUrl" alt="Auto kép" style="max-width: 100px; height: auto;" /></td>
        </tr>
    </tbody>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Törlés</button>
    <a href="@Url.Action("Index", "Auto")" class="btn btn-secondary">Mégsem</a>
</form>
